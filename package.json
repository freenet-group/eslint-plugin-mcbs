{
  "type": "commonjs",
  "name": "@freenet-group/eslint-plugin-mcbs",
  "version": "0.0.3",
  "author": "Benjamin Pahl",
  "license": "MIT",
  "main": "src/index.cjs",
  "scripts": {
    "build": "npm run generate:sbom",
    "generate:sbom": "npx @cyclonedx/cyclonedx-npm --output-file ./src/.generated/sbom.json",
    "lint": "npm run lint:code && npm run lint:test",
    "lint:code": "eslint src/**/*.cjs",
    "lint:test": "eslint tests/**/*.cjs",
    "lint:fix": "npm run lint:code -- --fix && npm run lint:test -- --fix",
    "mocha": "mocha 'tests/**/*.spec.cjs'",
    "precommit": "npm run test && npm run lint:fix && npm run prettier:write ",
    "prettier": "npm run prettier:write",
    "prettier:check": "prettier -c .",
    "prettier:write": "prettier -w -l .",
    "test": "npm run mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/freenet-group/eslint-plugin-mcbs.git"
  },
  "keywords": [
    "eslint",
    "eslint-plugin",
    "mcbs"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "peerDependencies": {
    "eslint": "8.57.1"
  },
  "devDependencies": {
    "@cyclonedx/cyclonedx-npm": "1.19.3",
    "@eslint/js": "9.11.0",
    "eslint": "9.11.0",
    "eslint-plugin-mocha": "10.5.0",
    "globals": "15.9.0",
    "mocha": "10.7.3",
    "prettier": "3.3.3"
  }
}
